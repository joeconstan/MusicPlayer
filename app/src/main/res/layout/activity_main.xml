<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:configChanges="orientation|screenSize|keyboard|keyboardHidden"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/relLayout1"
    tools:context="com.example.joseph.musicplayer.MainActivity">



    <android.support.v7.widget.Toolbar
        android:id="@+id/m_toolbar"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:paddingBottom="16dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"

        />



    <ListView
        android:layout_width="wrap_content"
        android:layout_height="430sp"
        android:id="@+id/listView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50sp"
        android:layout_below="@+id/m_toolbar"/>


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50sp"
    android:layout_below="@id/listView">

    <ImageButton
        android:src="@mipmap/play_buttm"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:id="@+id/playButton"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:src="@mipmap/forw_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/forwButton"
        android:layout_toRightOf="@+id/playButton"
        android:scaleType="fitCenter"
        />

    <ImageButton
        android:src="@mipmap/backw_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/backwButton"
        android:layout_toLeftOf="@+id/playButton"
        android:scaleType="fitCenter"

        />



</RelativeLayout>



</RelativeLayout>


